<div id="events">
        {{#each eventsList as |event|}}
        <div class="upcomingEvent">
                <div class="eventImage">
                        <img src="/images/{{event.picture}}" alt="{{event.name}}">
                        <div class="upcomingDateCard">
                                <h2>{{format_date_card_month date_start}}</h2>
                                <h2>{{format_date_card_day date_start}}</h2>
                        </div>
                </div>
                <div class="eventDescription">
                        <h2>{{event.name}}</h2>
                        <p>{{event.description}}</p>
                        <a href="/events/{{id}}" id="{{id}}" type="submit" class="eventJoin">
                                View This Event âŸ¶
                        </a>
                </div>
        </div>
        {{/each }}
</div>

<script src="/js/signup.js"></script>