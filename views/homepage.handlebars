<!-- Loop over each object in the events array -->
{{#each events as |event| }}
<div class="row mb-4 event">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/event/{{events.id}}">{{events.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money">ğŸ’²</span>
      <!-- Pass needed_volunteers value to the helper function -->
      <span class="volunteer-amount">{{format_amount event.needed_volunteers}}</span>
      needed!
    </p>
    <p>Created by {{events.member.name}} on {{format_date event.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{events.description}}
    </p>
  </div>
</div>
{{/each}}
